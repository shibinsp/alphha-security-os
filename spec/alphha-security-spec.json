      "highlight": "#ff0040"
    },
    "plymouth_theme": {
      "name": "alphha-security",
      "type": "script"
    }
  },

  "installer": {
    "name": "alphha-install",
    "modes": [
      {
        "id": "full",
        "name": "Full Installation",
        "description": "All security tools (offensive + defensive)",
        "size": "6 GB"
      },
      {
        "id": "offensive",
        "name": "Offensive Security",
        "description": "Penetration testing and red team tools",
        "size": "4 GB"
      },
      {
        "id": "defensive",
        "name": "Defensive Security",
        "description": "Blue team, SIEM, and monitoring tools",
        "size": "3 GB"
      },
      {
        "id": "forensics",
        "name": "Forensic Workstation",
        "description": "Digital forensics and incident response",
        "size": "3 GB"
      },
      {
        "id": "minimal",
        "name": "Minimal CLI",
        "description": "Core tools only, no desktop",
        "size": "1.5 GB"
      },
      {
        "id": "custom",
        "name": "Custom Installation",
        "description": "Select individual tool categories",
        "size": "Variable"
      }
    ],
    "disk_schemes": {
      "uefi_recommended": {
        "table": "gpt",
        "partitions": [
          {"name": "EFI", "size": "512M", "type": "esp", "fs": "vfat", "mount": "/boot/efi"},
          {"name": "Boot", "size": "1G", "type": "linux", "fs": "ext4", "mount": "/boot"},
          {"name": "Root", "size": "remaining", "type": "linux", "fs": "btrfs", "mount": "/"}
        ],
        "btrfs_subvolumes": ["@", "@home", "@snapshots", "@var_log"]
      },
      "encrypted": {
        "table": "gpt",
        "partitions": [
          {"name": "EFI", "size": "512M", "type": "esp", "fs": "vfat", "mount": "/boot/efi"},
          {"name": "Boot", "size": "1G", "type": "linux", "fs": "ext4", "mount": "/boot"},
          {"name": "Root", "size": "remaining", "type": "luks2", "fs": "btrfs", "mount": "/"}
        ],
        "luks": {
          "cipher": "aes-xts-plain64",
          "key_size": 512,
          "hash": "sha512",
          "iter_time": 5000
        }
      }
    }
  },

  "boot_modes": {
    "normal": {
      "name": "Alphha Security OS",
      "kernel_params": "quiet splash"
    },
    "forensic": {
      "name": "Forensic Mode (Read-Only)",
      "kernel_params": "noswap noautomount forensic"
    },
    "safe": {
      "name": "Safe Mode",
      "kernel_params": "single nomodeset"
    },
    "debug": {
      "name": "Debug Mode",
      "kernel_params": "debug systemd.log_level=debug"
    }
  },

