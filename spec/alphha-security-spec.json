{
  "metadata": {
    "name": "Alphha Security OS",
    "codename": "Sentinel",
    "version": "1.0.0",
    "base": "Debian Bookworm",
    "architecture": ["amd64", "arm64"],
    "type": "cybersecurity-distribution",
    "focus": "all-in-one-security",
    "maintainer": "Alphha Team",
    "website": "https://alphha.io",
    "copyright": "Copyright (c) 2026 Alphha Team",
    "license": "BSD-3-Clause",
    "build_date": "{{TIMESTAMP}}",
    "description": "An all-in-one Debian-based cybersecurity distribution combining offensive and defensive security tools with unique branding and hardened configurations."
  },

  "system": {
    "hostname": "alphha-sec",
    "default_user": "sentinel",
    "default_groups": ["sudo", "adm", "cdrom", "floppy", "audio", "video", "plugdev", "netdev", "bluetooth", "wireshark", "docker"],
    "shell": "/bin/zsh",
    "locale": "en_US.UTF-8",
    "timezone": "UTC",
    "keyboard": {
      "layout": "us",
      "variant": ""
    }
  },

  "desktop": {
    "environment": "xfce",
    "display_manager": "lightdm",
    "theme": {
      "gtk": "Alphha-Dark",
      "icons": "Papirus-Dark",
      "cursor": "Adwaita",
      "font": {
        "interface": "Noto Sans 10",
        "monospace": "JetBrains Mono 10",
        "document": "Noto Sans 10"
      }
    },
    "wallpaper": "/usr/share/backgrounds/alphha/alphha-default.png",
    "workspaces": {
      "count": 4,
      "names": ["Terminals", "Web Apps", "Analysis", "Documentation"]
    },
    "panel": {
      "position": "top",
      "height": 28,
      "plugins": ["whisker-menu", "tasklist", "systray", "pulseaudio", "power-manager", "clock", "actions"]
    }
  },

  "repositories": {
    "debian": {
      "main": "deb http://deb.debian.org/debian bookworm main contrib non-free non-free-firmware",
      "security": "deb http://security.debian.org/debian-security bookworm-security main contrib non-free non-free-firmware",
      "updates": "deb http://deb.debian.org/debian bookworm-updates main contrib non-free non-free-firmware"
    },
    "kali": {
      "enabled": true,
      "url": "deb http://http.kali.org/kali kali-rolling main contrib non-free non-free-firmware",
      "key": "https://archive.kali.org/archive-key.asc"
    }
  },

